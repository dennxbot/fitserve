# FitServe Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# Server Configuration
# ==========================================

# Port for the server to listen on
PORT=3000

# Environment (development, staging, production)
NODE_ENV=development

# ==========================================
# Supabase Configuration
# ==========================================
# Get these from your Supabase project dashboard

# Your Supabase project URL
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anonymous key (public key for client-side operations)
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (private key for server-side operations)
# ⚠️  KEEP THIS SECRET - Never expose this in client-side code
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ==========================================
# JWT Configuration
# ==========================================

# Secret key for signing JWT tokens
# Generate a secure random string (minimum 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long

# JWT token expiration time
# Examples: '1d' (1 day), '7d' (7 days), '24h' (24 hours), '3600' (3600 seconds)
JWT_EXPIRES_IN=7d

# ==========================================
# CORS Configuration
# ==========================================

# Allowed origins for CORS (comma-separated for multiple origins)
# Examples: 
#   Single origin: http://localhost:3000
#   Multiple origins: http://localhost:3000,https://yourdomain.com
#   Allow all (development only): *
CORS_ORIGIN=http://localhost:3000

# ==========================================
# Rate Limiting Configuration
# ==========================================

# Time window for rate limiting in milliseconds (15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000

# Maximum number of requests per IP per window
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# API Configuration
# ==========================================

# API path prefix
API_PREFIX=/api/v1

# ==========================================
# Admin Configuration
# ==========================================

# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@fitserve.com,superadmin@fitserve.com

# ==========================================
# File Upload Configuration (Optional)
# ==========================================

# Maximum file size for uploads (in bytes)
# 5MB = 5242880 bytes
MAX_FILE_SIZE=5242880

# Allowed file types for uploads (comma-separated MIME types)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# ==========================================
# Database Configuration (Optional)
# ==========================================
# Note: These are typically handled by Supabase, but you might need them for direct connections

# Database connection string (if not using Supabase client)
# DATABASE_URL=postgresql://username:password@localhost:5432/fitserve

# ==========================================
# External API Keys
# ==========================================

# USDA FoodData Central API
# Get your API key from: https://fdc.nal.usda.gov/api-key-signup.html
USDA_API_KEY=your_usda_api_key_here
USDA_API_BASE_URL=https://api.nal.usda.gov/fdc/v1

# Food database API keys (if integrating with other nutrition APIs)
# NUTRITIONIX_APP_ID=your_nutritionix_app_id_here
# NUTRITIONIX_API_KEY=your_nutritionix_api_key_here

# ==========================================
# Email Configuration (Optional)
# ==========================================
# Note: Supabase handles auth emails, but you might want custom email service

# Email service provider settings
# EMAIL_SERVICE=sendgrid
# EMAIL_API_KEY=your_email_api_key_here
# EMAIL_FROM=noreply@fitserve.com

# ==========================================
# Monitoring & Analytics (Optional)
# ==========================================

# Application monitoring
# SENTRY_DSN=your_sentry_dsn_here

# Analytics
# GOOGLE_ANALYTICS_ID=your_ga_id_here

# ==========================================
# Development & Debugging (Optional)
# ==========================================

# Enable debug mode (shows detailed error messages)
DEBUG=false

# Log level (error, warn, info, verbose, debug, silly)
LOG_LEVEL=info

# ==========================================
# Security Configuration (Optional)
# ==========================================

# Session secret for additional security
SESSION_SECRET=your_session_secret_here

# Enable/disable certain security features
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true

# ==========================================
# Cache Configuration (Optional)
# ==========================================

# Redis configuration for caching
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your_redis_password

# Cache expiration times (in seconds)
# CACHE_TTL_SHORT=300    # 5 minutes
# CACHE_TTL_MEDIUM=1800  # 30 minutes
# CACHE_TTL_LONG=3600    # 1 hour